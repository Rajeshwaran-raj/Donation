<link href="~/Content/Header.css" rel="stylesheet" />


<style>

    .contact-content {
        width: 28%;
        height: 1120px;
        margin: 2vh auto 2vh auto;
        /*background-color: ghostwhite; */
        max-width: 430px;
        background: #fff;
        border-radius: 7px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.3);
    }

    .head {
        /* background-color: #d8d1d1;*/
        padding: 10px 20px;
        text-align: center;
        font-size: 20px;
    }

    .form-group {
        margin-left: 65px;
    }

        .form-group input, label {
            /*line-height: 10px; */
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
        }

    .col-md-10 {
        line-height: 55px;
    }

        .col-md-10 input {
            width: 70%;
            padding: 10px 15px;
        }

        .col-md-10 textarea {
            height: 150px;
            width: 240px;
        }

    .contact-content hr {
        width: 70%;
    }

    .col-md-offset-2 {
        margin-left: 20px;
    }

    .contact-image {
        float: right;
        width: 63%;
        height: 500px;
        margin-top: 50px;
        /* border:1px solid black;*/
    }

        .contact-image img {
            width: 100%;
            /* height:400px;*/
        }

    .small-div {
        height: 20px;
    }

        .small-div small {
            visibility: hidden;
        }

    .col-md-10 .error {
        border-color: red;
    }

    .col-md-10 input .success {
        border-color: green;
    }
</style>


