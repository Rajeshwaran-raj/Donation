@model Donation.Models.AdminDonation

@{
    ViewBag.Title = "AddAdminDonation";
    Layout = null;
}

<link href="~/Content/Header.css" rel="stylesheet" />
<style>

    .contact-content {
        width: 40%;
        height: 600px;
        margin: 2vh auto 2vh auto;
        /*background-color: ghostwhite; */
        /*max-width: 430px; */
        background: #fff;
        border-radius: 7px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.3);
    }

    .head {
        /* background-color: #d8d1d1;*/
        padding: 10px 20px;
        text-align: center;
        font-size: 20px;
    }

    .form-group {
        margin-left: 65px;
    }

        .form-group input, label {
            /*line-height: 10px; */
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
        }

    .col-md-10 {
        line-height: 55px;
    }

        .col-md-10 input {
            width: 90%;
            padding: 10px 15px;
        }

        .col-md-10 textarea {
            height: 150px;
            width: 240px;
        }

    .contact-content hr {
        width: 70%;
    }

    .col-md-offset-2 {
        margin-left: 20px;
    }

    .contact-image {
        float: right;
        width: 63%;
        height: 500px;
        margin-top: 50px;
        /* border:1px solid black;*/
    }

        .contact-image img {
            width: 100%;
            /* height:400px;*/
        }

    .small-div {
        height: 20px;
    }

        .small-div small {
            visibility: hidden;
        }

    .col-md-10 .error {
        border-color: red;
    }

    .col-md-10 input .success {
        border-color: green;
    }

    .button {
        color: white;
        background: orangered;
        font-size: 1rem;
        font-weight: 300;
        letter-spacing: 1px;
        margin-top: 1.7rem;
        cursor: pointer;
        transition: 0.4s;
    }

        .button:hover {
            background: orange;
        }
</style>



<div class="header">

    <div class="link1">
        <i class="fa-solid fa-house" style="color: #5A769E;" onclick=" location.href='@Url.Action("Login","Home")' "></i>
        @Html.ActionLink("Home", "AdminPageView", "Admin")
        @Html.ActionLink("Edit User Details", "GetDetails", "Admin")
        @Html.ActionLink("Contact details", "GetContactDetails", "Admin")
        @Html.ActionLink("Add Donation", "AddAdminDonation", "Admin")
        @Html.ActionLink("Donation Detials", "IndexAddAdminDonation", "Admin")

    </div>
</div>


@using (Html.BeginForm("AddAdminDonation", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="contact">
        <div class="contact-content">

            <div class="head">
                <h2>Add Donation</h2>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
